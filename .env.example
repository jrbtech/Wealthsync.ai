# ===========================================
# WealthSync.ai Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ----- Firebase Configuration -----
# Get these from Firebase Console > Project Settings > General > Your apps
PUBLIC_FIREBASE_API_KEY=AIza...
PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
PUBLIC_FIREBASE_PROJECT_ID=your-project-id
PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123

# Firebase Admin SDK (for server-side)
# Get from Firebase Console > Project Settings > Service accounts > Generate new private key
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ----- Stripe Configuration -----
# Get from Stripe Dashboard > Developers > API keys
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create in Stripe Dashboard > Products)
STRIPE_FOUNDATION_PRICE_ID=price_...
STRIPE_GROWTH_PRICE_ID=price_...
STRIPE_LEGACY_PRICE_ID=price_...

# ----- Anthropic (Claude AI) -----
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# ----- Resend (Email) -----
# Get from https://resend.com/api-keys
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@wealthsync.ai

# ----- App Configuration -----
PUBLIC_APP_URL=http://localhost:5173
PORT=3000
NODE_ENV=development

# ----- Cloudflare (optional) -----
# Only needed if using Cloudflare D1/KV/etc
# CLOUDFLARE_ACCOUNT_ID=
# CLOUDFLARE_API_TOKEN=
